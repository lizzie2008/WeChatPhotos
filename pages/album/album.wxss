/**index.wxss**/

.album-container {
  display: flex;
  background-color: white;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 2%;
}

.album-item {
  background-color: gray;
  width: 48%;
  height: 330rpx;
  margin: 1%;
  border-radius: 5px;
  position: relative;
  overflow: hidden;
}

.album-item image {
  width: 100%;
  height: 100%;
}

.album-item-top {
  position: absolute;
  top: 0px;
  background: -webkit-linear-gradient(bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.8));
  width: 100%;
}

.album-item-bottom {
  position: absolute;
  bottom: 0px;
  background: -webkit-linear-gradient(bottom, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0));
  width: 100%;
}

.album-item text {
  color: gainsboro;
  font-size: 12px;
  margin: 5px;
}
